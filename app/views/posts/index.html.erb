<p id="notice"><%= notice %></p>

<h1 class="blog-post-title">Objave</h1>
  <div class="row mb-2">
    <% @posts.each do |post| %>
        <div class="col-md-6">
          <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary"><%= post.user.try(:name) || "Anonimen avtor:)" %></strong>
              <h3 class="mb-0"><%= post.title %></h3>
              <div class="mb-1 text-muted"><%= post.created_at.strftime('%d.%m.%Y') %></div>
              <p class="card-text mb-auto"><%= post.body.truncate(50, separator: /\s/) %></p>
              <p></p>
              <%= display_post_links(post) %>
            </div>
          </div>
        </div>
    <% end %>
  </div>

<br>

<%= link_to 'Dodaj Objavo', new_post_path , class:'btn btn-md btn-outline-primary' %>
